    link(href="css/main.min.css", rel="stylesheet", type="text/css")

body
    .body-wrapper
        .body-inner
            ul.news.clearfix
                .cell
                    - var title = 'Итоги сезона'
                    - var date = "3 июля 2017"
                    - var imgsrc = "img/football-1.jpg"
